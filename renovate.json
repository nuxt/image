{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>nuxt/renovate-config-nuxt"
  ],
  "baseBranches": [
    "main"
  ],
  "ignoreDeps": [
    "@nuxt/image"
  ],
  "packageRules": [
    {
      "groupName": "ipx",
      "matchPackageNames": [
        "ipx",
        "sharp"
      ]
    },
    {
      "groupName": "docs",
      "matchPackageNames": [
        "@nuxt/content"
      ],
      "matchPackagePatterns": [
        "^@nuxthq/",
        "^@nuxt/ui"
      ]
    }
  ]
}
